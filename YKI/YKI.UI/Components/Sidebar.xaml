<UserControl x:Class="YKI.UI.Components.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YKI.UI.Components"
             xmlns:viewmodel="clr-namespace:YKI.UI.ViewModel"
             xmlns:enums="clr-namespace:YKI.UI.Enums"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <!--<UserControl.DataContext>
        <viewmodel:SidebarViewModel/>
    </UserControl.DataContext>-->

    <Grid>
        <ContentControl Content="{Binding SelectedTab}">
            <ContentControl.Resources>
                <!-- Mission Tab Sidebar Content -->
                <DataTemplate DataType="{x:Type enums:TabType}">
                    <StackPanel>
                        <TextBlock Text="Mission Controls" FontWeight="Bold" Margin="10"/>
                        <Button Content="Start Mission" Style="{StaticResource SubmitButton}"/>
                        <Button Content="End Mission" Style="{StaticResource SubmitButton}"/>
                        <Button Content="Set Waypoint" Style="{StaticResource SubmitButton}"/>
                        <Button Content="Geofence Settings" Style="{StaticResource SubmitButton}"/>
                    </StackPanel>
                </DataTemplate>

                <!-- Telemetry Tab Sidebar Content -->
                <DataTemplate DataType="{x:Type enums:TabType}">
                    <StackPanel>
                        <TextBlock Text="Telemetry Info" FontWeight="Bold" Margin="10"/>
                        <TextBlock Text="Battery Status"/>
                        <TextBlock Text="Altitude"/>
                        <TextBlock Text="Speed"/>
                    </StackPanel>
                </DataTemplate>

                <!-- Video Tab Sidebar Content -->
                <DataTemplate DataType="{x:Type enums:TabType}">
                    <StackPanel>
                        <TextBlock Text="Video Streaming" FontWeight="Bold" Margin="10"/>
                        <Button Content="Start Stream" Style="{StaticResource SubmitButton}"/>
                        <Button Content="Stop Stream" Style="{StaticResource SubmitButton}"/>
                    </StackPanel>
                </DataTemplate>

                <!-- Settings Tab Sidebar Content -->
                <DataTemplate DataType="{x:Type enums:TabType}">
                    <StackPanel>
                        <TextBlock Text="Settings" FontWeight="Bold" Margin="10"/>
                        <Button Content="Communication Test" Style="{StaticResource SubmitButton}"/>
                        <Button Content="Reconnect Telemetry" Style="{StaticResource SubmitButton}"/>
                        <Button Content="Reconnect Video" Style="{StaticResource SubmitButton}"/>
                    </StackPanel>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</UserControl>
