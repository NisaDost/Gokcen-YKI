<UserControl x:Class="YKI.UI.Components.SidebarContent.VideoContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YKI.UI.Components.SidebarContent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250"
Background="{StaticResource BackgroundLightBrush}">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
             Visibility="{Binding IsVideoTabSelected, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Margin="10">
                <TextBlock Text="VİDEO KONTROL" 
                  Foreground="White" 
                  FontWeight="Bold" 
                  FontSize="14" 
                  Margin="0,0,0,10"/>

                <!-- Camera Status -->
                <Border Background="{StaticResource BackgroundDarkBrush}" 
               CornerRadius="5" 
               Padding="10" 
               Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Kamera Durumu" 
                          Foreground="{StaticResource SecondaryBrush}" 
                          FontSize="12" 
                          Margin="0,0,0,5"/>
                        <TextBlock Text="Çevrimdışı" 
                          Foreground="White" 
                          FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Video Quality -->
                <Border Background="{StaticResource BackgroundDarkBrush}" 
               CornerRadius="5" 
               Padding="10" 
               Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Video Kalitesi" 
                          Foreground="{StaticResource SecondaryBrush}" 
                          FontSize="12" 
                          Margin="0,0,0,5"/>
                        <ComboBox Background="{StaticResource BackgroundLightBrush}" 
                         Foreground="White" 
                         BorderBrush="{StaticResource PrimaryBrush}">
                            <ComboBoxItem Content="1080p"/>
                            <ComboBoxItem Content="720p" IsSelected="True"/>
                            <ComboBoxItem Content="480p"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Recording Controls -->
                <TextBlock Text="KAYIT KONTROL" 
                  Foreground="White" 
                  FontWeight="Bold" 
                  FontSize="14" 
                  Margin="0,20,0,10"/>

                <Button Content="Kaydı Başlat" 
               Style="{StaticResource SubmitButton}" 
               Margin="0,5"/>

                <Button Content="Kaydı Durdur" 
               Style="{StaticResource SubmitButton}" 
               Margin="0,5"/>

                <Button Content="Ekran Görüntüsü Al" 
               Style="{StaticResource SubmitButton}" 
               Margin="0,5"/>

                <!-- Camera Controls -->
                <TextBlock Text="KAMERA KONTROL" 
                  Foreground="White" 
                  FontWeight="Bold" 
                  FontSize="14" 
                  Margin="0,20,0,10"/>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="1" Content="↑" 
                   Style="{StaticResource SubmitButton}" 
                   Width="50" Height="30" 
                   Margin="2"/>
                    <Button Grid.Row="1" Grid.Column="0" Content="←" 
                   Style="{StaticResource SubmitButton}" 
                   Width="50" Height="30" 
                   Margin="2"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="●" 
                   Style="{StaticResource SubmitButton}" 
                   Width="50" Height="30" 
                   Margin="2"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="→" 
                   Style="{StaticResource SubmitButton}" 
                   Width="50" Height="30" 
                   Margin="2"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="↓" 
                   Style="{StaticResource SubmitButton}" 
                   Width="50" Height="30" 
                   Margin="2"/>
                </Grid>

                <!-- Zoom Controls -->
                <StackPanel Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Margin="0,10">
                    <Button Content="Zoom -" 
                   Style="{StaticResource SubmitButton}" 
                   Width="70" 
                   Margin="5,0"/>
                    <Button Content="Zoom +" 
                   Style="{StaticResource SubmitButton}" 
                   Width="70" 
                   Margin="5,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
