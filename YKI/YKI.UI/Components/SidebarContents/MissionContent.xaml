<UserControl x:Class="YKI.UI.Components.SidebarContent.MissionContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YKI.UI.Components.SidebarContent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250"
Background="{StaticResource BackgroundLightBrush}">
    <Grid>
        <!-- Mission Tab Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
             Visibility="{Binding IsMissionTabSelected, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Margin="10">
                <TextBlock Text="GÖREV BİLGİLERİ" 
                  Foreground="White" 
                  FontWeight="Bold" 
                  FontSize="14" 
                  Margin="0,0,0,10"/>

                <!-- Mission Status -->
                <Border Background="{StaticResource BackgroundDarkBrush}" 
               CornerRadius="5" 
               Padding="10" 
               Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Görev Durumu" 
                          Foreground="{StaticResource SecondaryBrush}" 
                          FontSize="12" 
                          Margin="0,0,0,5"/>
                        <TextBlock Text="Hazır" 
                          Foreground="White" 
                          FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Mission Time -->
                <Border Background="{StaticResource BackgroundDarkBrush}" 
               CornerRadius="5" 
               Padding="10" 
               Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Görev Süresi" 
                          Foreground="{StaticResource SecondaryBrush}" 
                          FontSize="12" 
                          Margin="0,0,0,5"/>
                        <TextBlock Text="00:00:00" 
                          Foreground="White" 
                          FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Waypoints -->
                <Border Background="{StaticResource BackgroundDarkBrush}" 
               CornerRadius="5" 
               Padding="10" 
               Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Rota Noktaları" 
                          Foreground="{StaticResource SecondaryBrush}" 
                          FontSize="12" 
                          Margin="0,0,0,5"/>
                        <TextBlock Text="0 / 0" 
                          Foreground="White" 
                          FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Mission Controls -->
                <TextBlock Text="GÖREV KONTROL" 
                  Foreground="White" 
                  FontWeight="Bold" 
                  FontSize="14" 
                  Margin="0,20,0,10"/>

                <Button Content="Görevi Başlat" 
               Style="{StaticResource SubmitButton}" 
               Margin="0,5"/>

                <Button Content="Görevi Duraklat" 
               Style="{StaticResource SubmitButton}" 
               Margin="0,5"/>

                <Button Content="Görevi Sonlandır" 
               Style="{StaticResource SubmitButton}" 
               Margin="0,5"/>

                <Button Content="Ana Üsse Dön" 
               Style="{StaticResource SubmitButton}" 
               Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
